@page
@model Assignment_Group_Project_RazorPages.Pages.SignUpModel
@{
}
<h1>Sign Up</h1>
@if (TempData["error"] != null)
{
    <div class="text-danger">
        <h3>@TempData["error"]</h3>
    </div>
    TempData.Clear();
}
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="SignUpUser.Email" class="control-label"></label>
                <input asp-for="SignUpUser.Email" class="form-control" id="txtEmail" required />
                <span asp-validation-for="SignUpUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignUpUser.Password" class="control-label"></label>
                <input asp-for="SignUpUser.Password" class="form-control" type="password" required />
                <span asp-validation-for="SignUpUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignUpUser.ConfirmPassword" class="control-label"></label>
                <input asp-for="SignUpUser.ConfirmPassword" class="form-control" type="password"  required autocomplete="on" />
                <span asp-validation-for="SignUpUser.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                Already Have An SignUpUser? <a asp-page="./Login">Login</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign Up" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
